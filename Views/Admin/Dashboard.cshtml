        }

        .mybooking-Div {
            background: #0080b357;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0px 0px 20px 0px rgb(0 0 0 / 41%);
            backdrop-filter: blur(19px);
        }

        .mybooking-title {
            color: white;
            font-size: 57px;
            font-weight: 700;
            /* background: linear-gradient(to right, red, yellow 49%); */
            /* -webkit-text-fill-color: #ff31f969; */
            -webkit-background-clip: text;
        }

        .mybooking-set-div {
            background: #6a23af;
            border-radius: 10px;
            padding: 23px;
            box-shadow: inset 0px 0px 20px 0px rgb(0 0 0 / 64%);
        }

        .mybooking-set-items-btn {
            display: flex;
            background: #d520ff9c;
            /* margin: 0px; */
            padding: 9px;
