<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        fclub();
        $("#SelectClub").val($("#SelectClub option:first").val());
        allTimeDetails();
    });

    function fclub() {
        $.ajax({
            url: '/DropDown/Club',
            type: 'POST',
            async: false,
            success: function (response) {
                console.log(response);
                $("#SelectClub").html(response);
            }
        });
    }

    function searchClubs() {
        var date = $("#datePicker").val().toString();
        var club = $("#SelectClub").val();
        $.ajax({
            url: '/Dash/AdminShow',
            type: 'POST',
            data: {date:date, club:club},
            success: function (response) {
                $("#PieChart1").attr("src", response['imgUrl']);
                $("#total_earning").text(response['booking_amount']);
                $("#total_booking").text(response['total_booking']);

                $("#PieChart1_today").attr("src", response['imgUrl_today']);
                $("#total_earning_today").text(response['booking_amount_today']);
                $("#total_booking_today").text(response['total_booking_today']);
                console.log(response['imgUrl_today']);
            }
        });
    }

    function allTimeDetails() {
        $.ajax({
            url: '/Dash/allTimeDetailsShow',
            type: 'POST',
            success: function (response) {
                $("#earning").text(response['Earning']);
                $("#today").text(response['Members']);
                $("#clubs").text(response['Clubs']);
                $("#games").text(response['Games']);
            }
        });
    }

</script>