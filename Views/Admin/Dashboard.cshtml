        }

        .mybooking-item-num {
            font-size: 40px;
            width: 5%;
            text-align: center;
            font-weight: 700;
        }

        .mybooking-item-division {
            width: 2px;
            color: white;
            background: white;
            margin: 4px;
            height: 51px;
        }

        .mybooking-item-info {
            width: 60%;
