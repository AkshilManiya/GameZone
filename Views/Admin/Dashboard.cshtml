            position: fixed;
            /* background: linear-gradient(to bottom right, #ffffff, #e2d3e7); */
            z-index: 2;
            transition: right 0.3s ease-in-out;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .slotConfirm-div {
            border-radius: 10px;
            background: linear-gradient(to bottom right, #00bfad87, #009fb97a);
            box-shadow: 0 0 20px 1px rgb(0 0 0);
            color: white;
            padding: 20px;
            text-align: center;
            margin: 0 10;
        }

        .slotConfirm-main-open {
            display: block;
        }

        .slotConfirm-title {
            text-align: left;
            font-size: 246%;
            font-weight: bold;
            /* padding: 28px; */
            background: linear-gradient(to right, #00ff95, cyan);
            -webkit-text-fill-color: #91d2ff69;
            -webkit-background-clip: text;
        }

        .slotConfirm-left {
            text-align: left;
            background: #00daff4f;
            border-radius: 10px;
            padding: 8px 24px 24px 24px;
            height: 100%;
            overflow: hidden;
            position: relative;
        }

        .slotConfirm-gamename {
            font-size: 45px;
            font-weight: 700;
            display: flex;
            align-items: center;
        }

        .slotConfirm-club {
            font-size: 23px;
            display: flex;
        }

        .slotConfirm-location {
            font-size: 23px;
            display: flex;
        }

        .slotConfirm-time {
            display: flex;
            font-size: 23px;
        }

        .slotConfirm-persons {
            display: flex;
            font-size: 23px;
        }

        .slotConfirm-amount {
            display: flex;
            font-size: 23px;
        }

        .slotConfirm-cancel-div {
            text-align: center;
            position: absolute;
            bottom: 0;
            right: 0;
            left: 0;
            /* top: 0; */
            padding: 16px;
        }

        .slotConfirm-cancel-btn {
            padding: 5px 18px;
            color: #ffffffa1;
            background: #ab2f2f;
            font-size: 16px;
            border: 1px solid;
            border-radius: 8px;
            height: 33px;
            margin-left: 30px;
        }

        .slotConfirm-cancel-btn:hover {
            color: white;
            background: #000000;
        }

        .slotConfirm-Download-btn {
            padding: 5px 18px;
            color: #ffffffa1;
            background: #0e7d1b;
            font-size: 16px;
            border: 1px solid;
            border-radius: 8px;
            height: 33px;
            margin-left: 30px;
        }

        .slotConfirm-Download-btn:hover {
            color: white;
            background: #000000;
        }

        .slotConfirm-rating-btn {
            padding: 5px 86px;
            color: #ffffffa1;
            background: #ab2f2ff0;
            font-size: 22px;
            border: 0;
            border-radius: 10px;
        }

        .slotConfirm-rating-btn:hover {
            color: white;
            background: #af0000;
        }

        .slotConfirm-right {
            background: #00daff4f;
            border-radius: 10px;
            padding: 8px 24px 24px 24px;
            text-align: center;
        }

        .slotConfirm-right-slot-id {}

        .slotConfirm-right-qr-code {
            width: 100%;
            height: 346px;
            background: white;
        }

        .slotConfirm-right-qr-code-img {
            width: 100%;
            height: auto;
            float: left;
            max-width: 100%;
        }

        .info-icons {
            padding-right: 10px;
        }

        .blur2 {
            filter: blur(4px);
        }

        .rating-main {
            display: none;
            position: fixed;
            /* background: linear-gradient(to bottom right, #ffffff, #e2d3e7); */
            z-index: 2;
            transition: right 0.3s ease-in-out;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .rating-div {
            border-radius: 10px;
            /* background: linear-gradient(to bottom right, #ab00bf, #8300b9); */
            box-shadow: 0 0 20px 1px rgb(0 0 0 / 33%);
            color: white;
            /* padding: 20px; */
            text-align: center;
            margin: 0 10;
        }

        .rating-div-give-btnSet {}

        .rating-div-btnSet-btn {
            background: transparent;
            border: 0;
            color: white;
            font-size: 100px;
        }

        .rating-div-des {}

        .rating-des-text {
            color: white;
        }

        .rating-Open {
            display: block;
        }

        .r-hide {
            display: none;
        }

        .r-show {
            display: block;
        }

        .Details-set {}

        .Details-set-A {
            border-radius: 10px;
            overflow: hidden;
        }

        .Details-set-A-in {
            background: #00daff4a;
            text-align: center;
            color: white;
            padding: 16px;
        }

        .Details-set-A-in-title {
            color: #7ffeffc9;
            font-size: 22px;
        }

        .Details-set-A-in-text {
            font-size: 33px;
        }

        .Details-set-B {
            border-radius: 10px;
        overflow: hidden;
