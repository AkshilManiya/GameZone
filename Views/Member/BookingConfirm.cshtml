<div class="slotConfirm-div" id="">
    <div class="row">
        <div class="slotConfirm-title">
            Slot confirmation
        </div>
        <div class="col-lg-8 col-12">
            <div class="slotConfirm-left">
                <div class="slotConfirm-gamename">
                    @ViewBag.Game_name
                    <button id="CalBtn" onclick="cancelBooking()" class="slotConfirm-cancel-btn">Cancel </button>
                    <button onclick="downloadQRCode()" class="slotConfirm-Download-btn">Download</button>
                </div>
                <div class="slotConfirm-club"><i class="ri-building-4-fill info-icons"></i>Club : @ViewBag.Club_name </div>
                <div class="slotConfirm-location"><i class="ri-map-pin-2-fill info-icons"></i>Location : @ViewBag.Address</div>
                <div class="slotConfirm-location"><i class="ri-map-pin-2-fill info-icons"></i>Manager : @ViewBag.Manager_name | @ViewBag.Contact</div>
                <div class="slotConfirm-time"><i class="ri-calendar-2-fill info-icons"></i>Date & Time : @ViewBag.Slot_date |  @ViewBag.Slot_time</div>
                <div class="slotConfirm-time"><i class="ri-calendar-2-fill info-icons"></i>Duration : @ViewBag.Duration</div>
                <div class="slotConfirm-persons"><i class="ri-team-fill info-icons"></i>Players : @ViewBag.Players</div>
                <div class="slotConfirm-amount"><i class="ri-coin-fill info-icons"></i>Payable Amount : @ViewBag.amount ₹ ( Offer : @ViewBag.Offer % | Tax : @ViewBag.Tax ) </div>

                <div class="rating-div" id="Rating">
                    <div class="rating-div-give-btnSet" id="rateBtn">
                        <button class="rating-div-btnSet-btn" onclick="rateBtn(1)" id="rate1">☆</button>
                        <button class="rating-div-btnSet-btn" onclick="rateBtn(2)" id="rate2">☆</button>
                        <button class="rating-div-btnSet-btn" onclick="rateBtn(3)" id="rate3">☆</button>
                        <button class="rating-div-btnSet-btn" onclick="rateBtn(4)" id="rate4">☆</button>
                        <button class="rating-div-btnSet-btn" onclick="rateBtn(5)" id="rate5">☆</button>
                    </div>
                    <div class="rating-div-des">
                        <div class="rating-des-text" id="description">
                            Give ratings about this game
                        </div>
                    </div>
                </div>
                <!--
                    <div class="slotConfirm-cancel-div">
                        <button class="slotConfirm-cancel-btn">Cancel the slot</button>
                    </div>
                -->
            </div>
        </div>
        <div class="col-lg-4 col-12">
            <div class="slotConfirm-right">
                <div class="slotConfirm-right-slot-id">
                    Slot ID : @ViewBag.slotid
                </div>
                <div class="slotConfirm-right-qr-code">
                    <img id="Qrcode" class="slotConfirm-right-qr-code-img" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        fetch_Qrcode();
        console.log("asdflg");
        if ((@ViewBag.DateDiff == 2) &&  (@ViewBag.Check_in == 0)) {
            $("#CalBtn").show();
        }
        else { 
            $("#CalBtn").hide();
        }
        if (@ViewBag.Check_in == 1) {
            $("#Rating").show();
        }
        else { 
            $("#Rating").hide();
        }

        rateBtn(@ViewBag.BookingRating);
    });

    function rateBtn(rate) {
        if (rate == 1) {
            document.getElementById("rate1").innerHTML = "★";
            document.getElementById("rate2").innerHTML = "☆";
            document.getElementById("rate3").innerHTML = "☆";
            document.getElementById("rate4").innerHTML = "☆";
            document.getElementById("rate5").innerHTML = "☆";
        } else if (rate == 2) {
            document.getElementById("rate1").innerHTML = "★";
            document.getElementById("rate2").innerHTML = "★";
            document.getElementById("rate3").innerHTML = "☆";
            document.getElementById("rate4").innerHTML = "☆";
            document.getElementById("rate5").innerHTML = "☆";

        } else if (rate == 3) {
            document.getElementById("rate1").innerHTML = "★";
            document.getElementById("rate2").innerHTML = "★";
            document.getElementById("rate3").innerHTML = "★";
            document.getElementById("rate4").innerHTML = "☆";
            document.getElementById("rate5").innerHTML = "☆";

        } else if (rate == 4) {
            document.getElementById("rate1").innerHTML = "★";
            document.getElementById("rate2").innerHTML = "★";
            document.getElementById("rate3").innerHTML = "★";
            document.getElementById("rate4").innerHTML = "★";
            document.getElementById("rate5").innerHTML = "☆";

        } else if (rate == 5) {
            document.getElementById("rate1").innerHTML = "★";
            document.getElementById("rate2").innerHTML = "★";
            document.getElementById("rate3").innerHTML = "★";
            document.getElementById("rate4").innerHTML = "★";
            document.getElementById("rate5").innerHTML = "★";
        }
        store_rating(rate);
    }

    function store_rating(rating) {
        $.ajax({
            url: "/Booking/storeRating",
            method: "POST",
            data: { rating: rating, id: @ViewBag.Booking_id},
            success: function (response) {
                console.log(response);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    function DateDiff(dateString) {
        const today = new Date().toISOString().slice(0, 10);
        const tomorrow = new Date(new Date().getTime() + 24 * 60 * 60 * 1000).toISOString().slice(0, 10);
        const dayAfterTomorrow = new Date(new Date().getTime() + 2 * 24 * 60 * 60 * 1000).toISOString().slice(0, 10);
        if (dateString == tomorrow) {
            return false;
        }
        else if (dateString == dayAfterTomorrow) {
            return false;
        }
        else if (today == dateString) { 
            return false;
        }
        else{
            return true;
        }
    }

    


    function cancelBooking() {
        $.ajax({
            url: '/Booking/cancelBooking',
            type: 'POST',
            data: {id: @ViewBag.Booking_id},
            success: function (response) {
                console.log(response);
                if (response == "success") { 
                    window.location.href = '/Member/MyBooingsView';
                }
            }
        });
    }

    function DateDiff(dateString) {
        var givenDate = new Date(dateString);
        var today = new Date();
        var difference = today.getTime() - givenDate.getTime();
        var differenceInDays = difference / (1000 * 3600 * 24);
        if (differenceInDays > 2) {
            return true;
        } else {
            return false;
        }
    }

    function fetch_Qrcode() {
        $.ajax({
            url: "https://akyworld.pythonanywhere.com/qrcode?data=BookingId,"+@ViewBag.Id,
            type: 'GET',
            xhrFields: {
                responseType: 'blob'
            },
            success: function (blob) {
                const imageUrl = URL.createObjectURL(blob);
                $('#Qrcode').attr('src', imageUrl);
            },
            error: function (xhr, status, error) {
                console.error('Error fetching QR code:', error);
            }
        });
    }

    function downloadQRCode() {
        const container = document.getElementById("Qrcode");
        const link = document.createElement('a');
        link.href = container.src;
        link.download = 'qrcode.png';
        link.click();
    }

</script>



