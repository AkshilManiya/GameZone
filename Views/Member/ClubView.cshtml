<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        fetch_Games();
    });

    function fetch_Games() {
        $.ajax({
            url: '/Game/fetchGamesUser/'+@ViewBag.Id,
            type: 'POST',
            success: function (response) {
                $("#Games").html(response);
            }
        });
    }
</script>