            </div>
        </nav>
    </header>
    <div class="slider-container" id="slider">
        <div class="profileForm">
            <img class="profile-image" id="proimage" alt="Profile Image">
            <div class="user-name" id="proname"></div>
            <div class="slider-buttons">
                <hr class="profile-btn-sep">
                <div class="boxS-1">
                    <button class="btnS-one" onclick="window.location.href='/Manager/Profile'">
                        <span>
                            <i class="ri-user-fill profile-slide-icons"></i>
                            Manage Profile
                        </span>
                    </button>
                </div>
                <hr class="profile-btn-sep">
                <div class="boxS-1">
                    <button class="btnS-one" onclick="window.location.href='/app/logout'">
                        <span>
                            <i class="ri-logout-box-r-fill profile-slide-icons"></i>
                            Logout
                        </span>
                    </button>
                </div>
                <hr class="profile-btn-sep">
            </div>
        </div>
    </div>

    <!--
    <a href="/Game/AddGameView">AddGame</a>
    <br>
    <a href="/Game/ManageGameView">ManageGame</a>
    <br>
    <a href="/RowSlot/ManageSlotView">ManageSlot</a>
    <br>
